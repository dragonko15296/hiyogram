<section class=notice_hiyo>
    <h3><%= notice %><h3>
</section>

<body>
    
    <div class="container">
        <div class="row">
            <%= form_for(@hiyo) do |f| %>
                <div class="col-xs-12 col-sm-12 col-md-7 col-md-offset-2">
                    <%= f.text_field :content,class: "form-control" %>
                </div>
                <div class="col-xs-offset-9">
                    <%= f.submit "ひよる！", class: "btn btn-default btn-sm btn-warning" %>
                </div>
            <% end %>
        </div>
    </div>

    <section class=list_hiyo>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
                    <% @hiyos.each do |hiyo| %>
                        <p><%= hiyo.content %></p>
                        <div class="btn-group col-xs-offset-9">
                            <button type="button" class="btn btn-sm btn-warning ">ひよ</button>
                            <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><%= link_to "りなおす！", edit_hiyo_path(hiyo.id), class: "btn btn-default btn-xs btn-warning" %></li>
                                <li><%= link_to "ってなんかいなかった！", hiyo_path(hiyo.id), method: :delete, data: { confirm: 'そういうことにします？'}, class: "btn btn-default btn-xs" %></li>
                            </ul>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>
</body>